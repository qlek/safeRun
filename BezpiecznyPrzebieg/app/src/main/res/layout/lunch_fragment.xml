<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        style="@style/fontColor"
        android:textSize="30dp"
        android:textAlignment="center" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fontColor"
        android:id="@+id/car_frame"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/textView">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/car"
            android:id="@+id/car"
            android:layout_margin="3dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="48dp"
            style="@style/itemStyle"
            android:textSize="22dp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fontColor"
        android:id="@+id/publicTransportFrame"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/car_frame">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/public_transport"
            android:id="@+id/publicTransport"
            android:layout_below="@+id/car"
            android:layout_margin="3dp"
            android:layout_alignParentStart="true"
            style="@style/itemStyle"
            android:layout_marginTop="3dp"
            android:textSize="22dp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fontColor"
        android:layout_alignParentBottom="true"
        android:id="@+id/infoFrame">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_label_sponsor"
            android:id="@+id/info"
            android:layout_margin="3dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            style="@style/itemStyle"
            android:textSize="22dp" />
    </FrameLayout>
</RelativeLayout>