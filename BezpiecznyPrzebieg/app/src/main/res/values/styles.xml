<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/fontColor</item>
    </style>

    <style name="MyActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:textColor">@color/fontColor</item>
        <item name="android:background">@color/fontColor</item>
    </style>

    <style name="fragmentThem">
        <item name="android:background">@color/mainBackground</item>
    </style>
    <style name="fontColor">
        <item name="android:textColor">@color/fontColor</item>
        <item name="android:background">@color/brightBackground</item>
    </style>

</resources>
